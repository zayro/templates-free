<params>

		<param name="sliderHeight" type="text" default="336" size="5" label="Height of the Slider Area" description="Enter the height of the slider Area in px" />
		<param name="sliderWidth" type="text" default="980" size="5" label="Width of the Slider Area" description="Enter the width of the slider Area in px" />
		<param name="sliderDuration" type="text" default="400" size="5" label="Duration of the Slides change" description="Enter the time between one slide to another in ms" />
		<param name="sliderAuto" type="radio" default="0" label="Autoplay" description="Enables the autoplay function for the slider">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="sliderTime" type="text" default="4000" size="5" label="Duration of the Slides change" description="Enter the time between one slide to another in ms" />
		<param type="spacer"/>
		<param name="logoType" type="list" default="1" label="Show text logo or image logo?" description="SHOW LOGO AS IMAGE OR TEXT">
			<option value="1">Image</option>
			<option value="2">Text</option>
		</param>
		<param name="logoText" type="text" default="LogoText" size="12" label="Enter logo text if logo type is set to text" description="Enter the logo text" />
			<param type="spacer"/>
		<param name="showPathway" type="radio" default="1" label="Show Pathway Navigation" description="SHOW PATHWAY NAVIGATION">
