package com.massiveProCreation.ball.utils {	import flash.display.Sprite;
		public class ImageResize {				public function ImageResize():void {			// this class resizes image that is inputed into the resize function, 			// image height = stage height the width is counted to be protialy do height		}		public function resize(obj:Sprite, stageWidth:int, stageHeight:int):Sprite {			var multiply:Number;			obj.width *= 5;			obj.height *= 5;						if(obj.height > stageHeight){				multiply = stageHeight / obj.height;				obj.height = stageHeight;				obj.width = obj.width * multiply			} 			if(obj.width < stageWidth){				multiply = stageWidth / obj.width;				obj.width = stageWidth;				obj.height = obj.height * multiply;			}						return obj;				}	}}