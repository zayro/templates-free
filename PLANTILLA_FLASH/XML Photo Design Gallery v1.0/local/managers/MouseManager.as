package local.managers{	import flash.display.MovieClip;	import flash.display.Stage;	import flash.events.MouseEvent;	import flash.text.TextField;		import local.display.Bubble;		public class MouseManager extends Object	{		private static var _graphic: MovieClip;		private static var _stage:   Stage;		private static var bubble:   Bubble;				public static var clicked: Boolean = false;		public static var moved:   int = -2;				public static function initialize(image: MovieClip, stg: Stage, clip: MovieClip, t: TextField) : void		{			image.mouseEnabled = false;			image.mouseChildren = false;			image.visible = false;						_graphic = image;			_stage = stg;						bubble = new Bubble(t);			clip.addChild(bubble);						stg.addEventListener(MouseEvent.MOUSE_MOVE, mouseMove);		}				private static function mouseMove(event: MouseEvent) : void		{			_graphic.x = _stage.mouseX;			_graphic.y = _stage.mouseY;			bubble.x = _graphic.x;			bubble.y = _graphic.y;		}				public static function show() : void		{			if (clicked && moved > 0)				return void;						_graphic.visible = true;		}				public static function hide() : void		{			_graphic.visible = false;		}				public static function showBubble(text: String) : void		{			bubble.show(text);		}				public static function hideBubble() : void		{			bubble.hide();		}	}}